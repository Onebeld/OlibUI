<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Version>2.2.0</Version>
		<Authors>Dmitry Zhutkov (Onebeld)</Authors>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Copyright>Â©2020-2021 Dmitry Zhutkov (Onebeld)</Copyright>
		<RepositoryType>public</RepositoryType>
		<PackageTags>style, olib, olibui, avalonia, ui, avaloniaui</PackageTags>
		<Description>Dynamic user interface for Avalonia</Description>
		<PackageProjectUrl></PackageProjectUrl>
		<RepositoryUrl>https://github.com/Onebeld/OlibUI</RepositoryUrl>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageIcon>OlibUI_icon.png</PackageIcon>
		<PackageIconUrl />
		<GenerateAssemblyInfo>true</GenerateAssemblyInfo>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Avalonia" Version="0.10.0" />
	</ItemGroup>
	<ItemGroup>
		<AvaloniaResource Include="Assets\**" />
		<AvaloniaResource Include="Themes\**" />
		<AvaloniaResource Include="Controls\**" />
		<AvaloniaResource Include="Instruments\**" />
		<AvaloniaResource Include="Windows\OlibWindow.axaml" />
		<AvaloniaResource Include="Local\**" />
		<AvaloniaXaml Remove="Controls\SplitView.axaml" />
		<AvaloniaXaml Remove="Instruments\NavigationView\NavigationView.axaml" />
		<AvaloniaXaml Remove="Instruments\NavigationView\NavigationViewItem.axaml" />
		<AvaloniaResource Include="OlibUI.axaml" />
	</ItemGroup>
	<ItemGroup>
	  <None Include="..\..\LICENSE.md">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	  <None Include="OlibUI_icon.png">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	</ItemGroup>
</Project>
